<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="30dp"
    android:background="@color/cream">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/cream">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/font"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="cursive"
                android:gravity="center"
                android:lineHeight="40sp"
                android:text="Welcome To Online Cart"
                android:textSize="40sp"
                android:textStyle="bold"
                android:textColor="@color/beige1">
            </TextView>
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/cartlogo"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:outlineAmbientShadowColor="@color/black">

            </ImageView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your one stop solution for all shopping items"
            android:fontFamily="cursive"
            android:layout_marginTop="15dp"
            android:textColor="#800000"
            android:gravity="center"
            android:layout_gravity="center"
            android:autoSizeMaxTextSize="40dp"
            android:textSize="20sp">

        </TextView>

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:text="Admin Login"
                android:textColor="@color/white"
                android:backgroundTint="@color/red"
                app:startIconDrawable="@drawable/admin"
                android:id="@+id/btn_adminlogin"
                app:cornerRadius="30dp"
                android:textStyle="bold"
                android:layout_marginHorizontal="40dp"
                >
            </com.google.android.material.button.MaterialButton>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="User Login"
                android:textColor="@color/white"
                app:startIconDrawable="@drawable/user"
                android:backgroundTint="@color/red"
                app:cornerRadius="30dp"
                android:textStyle="bold"
                android:id="@+id/btn_userlogin"
                android:layout_marginHorizontal="40dp">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </ScrollView>




</LinearLayout>