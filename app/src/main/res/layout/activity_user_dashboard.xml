<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/userdrawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".UserDashboard"
    >


    <!--    main designing-->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"

android:fitsSystemWindows="true"  >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/cream"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/brown"
            android:id="@+id/user_toolbar"
            app:title="ONLINE CART"
            app:subtitle="Shop Grocery Online"
            android:titleTextColor="@color/white"
            android:fitsSystemWindows="true">

        </androidx.appcompat.widget.Toolbar>

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:strokeWidth="10sp"
            app:strokeColor="@color/black"
            android:src="@drawable/bgimage1"
            android:layout_margin="5sp">
        </com.google.android.material.imageview.ShapeableImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop by Cateogory"
            android:layout_margin="5sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:background="@color/beige">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_category"
            android:layout_margin="5sp">

        </androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shop by Latest product"
            android:layout_margin="5sp"
            android:textColor="@color/black"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="20sp"
            android:background="@color/beige">

        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycler_product"
            android:layout_margin="15sp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/user_nav"
        android:layout_gravity="start"
        app:menu="@menu/usermenu">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
