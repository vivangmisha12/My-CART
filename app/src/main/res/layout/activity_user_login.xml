<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserLogin"
    android:orientation="vertical"
    android:padding="30sp"
    android:background="@color/cream">
 <com.google.android.material.card.MaterialCardView
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     app:cardElevation="6dp"
     android:elevation="10sp"
     android:padding="20sp"
     app:rippleColor="@color/red"



     app:cardCornerRadius="15dp">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:padding="20sp"
         android:background="@color/cream">
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="Welcome Back"
             android:lineHeight="60sp"
             android:gravity="center"
             android:textSize="37sp"
             android:textStyle="bold"
             android:textAllCaps="true"
             android:layout_marginTop="10sp"
             android:fontFamily="serif-monospace"
             android:textColor="@color/beige1">
         </TextView>
         <ImageView
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:src="@drawable/cartlogo"
             android:layout_gravity="center"
             android:layout_marginTop="15dp"
             android:outlineAmbientShadowColor="@color/black">

         </ImageView>
         <com.google.android.material.textfield.TextInputLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:layout_gravity="right"
             android:hint="Email Id"
             app:hintTextColor="@color/brown"
             android:background="@color/white"
             app:startIconDrawable="@drawable/phone"
             app:endIconMode="clear_text"
             app:startIconTint="@color/mycolor3"
             app:boxStrokeColor="@color/brown">
             <com.google.android.material.textfield.TextInputEditText
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:inputType="textEmailAddress"
                 android:id="@+id/edt_email">
             </com.google.android.material.textfield.TextInputEditText>
         </com.google.android.material.textfield.TextInputLayout>
         <com.google.android.material.textfield.TextInputLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:hint="Password"
                 android:background="@color/white"
                 android:layout_marginTop="10dp"
                 app:startIconDrawable="@drawable/lock"
                 app:hintTextColor="@color/brown"
                 app:endIconMode="password_toggle"
                 counterEnabled="true"
             app:boxStrokeColor="@color/brown"
                 android:elevation="4sp">
             <com.google.android.material.textfield.TextInputEditText
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:id="@+id/edt_password"
                 android:inputType="numberPassword">
             </com.google.android.material.textfield.TextInputEditText>
         </com.google.android.material.textfield.TextInputLayout>
         <TextView
             android:id="@+id/txt_gotoregisternow"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:gravity="right"
             android:text="New User? Register Now"
             android:layout_marginTop="10sp"
             android:textColor="@color/red"
             android:clickable="true"
             android:focusable="true">
         </TextView>
         <com.google.android.material.button.MaterialButton
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="30sp"
             android:text="Login Now"
             android:id="@+id/btn_user_dash"
             android:backgroundTint="@color/brown"
             android:padding="10sp"
             android:textStyle="bold"
             android:textColor="@color/white"
             android:textAllCaps="true">
         </com.google.android.material.button.MaterialButton>
     </LinearLayout>
 </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>