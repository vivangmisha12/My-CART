<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="UserRegistration"
    android:orientation="vertical"
    android:padding="30sp"
    android:background="@color/cream">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="5sp"
        android:elevation="10sp"
        android:padding="20sp"

        app:cardCornerRadius="10sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20sp"
            android:background="@color/cream">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Now"
                android:lineHeight="60sp"
                android:gravity="center"
                android:textSize="37sp"
                android:textStyle="bold"
                android:textAllCaps="true"

                android:layout_marginTop="10sp"
                android:fontFamily="serif-monospace"
                android:textColor="@color/beige1">
            </TextView>
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/cartlogo"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:outlineAmbientShadowColor="@color/black">

            </ImageView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:hint="Name"
                app:startIconDrawable="@drawable/user"
                app:endIconMode="clear_text"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textShortMessage"
                    android:id="@+id/edt_name">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:hint="Mobile Number"
                app:startIconDrawable="@drawable/phone"
                app:endIconMode="clear_text"
                app:startIconTint="@color/brown">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:id="@+id/edt_mobno"
                    android:background="@color/white">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:hint="Email"
                app:startIconDrawable="@drawable/mail"
                app:endIconMode="clear_text"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:id="@+id/edt_mail">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:layout_marginTop="15dp"
                app:startIconDrawable="@drawable/lock"
                app:endIconMode="password_toggle"
                counterEnabled="true"
                android:elevation="4sp"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/edt_password"
                    android:inputType="textPassword">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=" Correct Password"
                android:layout_marginTop="15dp"
                app:startIconDrawable="@drawable/lock"
                app:endIconMode="password_toggle"
                counterEnabled="true"
                android:elevation="4sp"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/Correct"
                    android:inputType="textPassword"
                    tools:ignore="InvalidId">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:hint="Address"
                app:startIconDrawable="@drawable/location"
                app:endIconMode="clear_text"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:id="@+id/edt_address">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:hint="PinCode"
                app:endIconMode="clear_text"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:id="@+id/edt_pin">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:hint="Landmark"
                app:startIconDrawable="@drawable/location"
                app:endIconMode="clear_text"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:id="@+id/edt_land">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="right"
                android:hint="House Number"
                app:startIconDrawable="@drawable/location"
                app:endIconMode="clear_text"
                app:startIconTint="@color/brown"
                android:background="@color/white">
                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberSigned"
                    android:id="@+id/edt_house">
                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="Already Registered?Login Now"
                android:layout_marginTop="10sp"
                android:textColor="@color/red"
                android:id="@+id/txt_gotologin">
            </TextView>
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:layout_marginHorizontal="30dp"
                android:text="Register Now"
                android:backgroundTint="@color/brown"
                android:padding="10sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textAllCaps="true"
                android:id="@+id/btn_register">
            </com.google.android.material.button.MaterialButton>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
    </ScrollView>
</LinearLayout>